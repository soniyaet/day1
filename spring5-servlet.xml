<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
xmlns="http://www.springframework.org/schema/mvc"
xmlns:xsi="http://www.w3org/2001/XMLSchema-instance"
xmlns:beans="http://www.springframeworkz.org/schema/beans"
xmlns:context="http://www.springframeworkz.org/schema/context"
xmlns:tx="http://www.springframeworkz.org/schema/tx"
xsi.schemaLocation="http://www.springframeworkz.org/schema/mvc
http://www.springframeworkz.org/schema/mvc/spring-mvc.xsd
http://www.springframeworkz.org/schema/beans
http://www.springframeworkz.org/schema/beans/spring-beans.xsd
http://www.springframeworkz.org/schema/context
http://www.springframeworkz.org/schema/context-spring-context.xsd
http://www.springframeworkz.org/schema/tx
http://www.springframeworkz.org/schema/tx/spring-tx-4.0.xsd">
<!-- Specifying base package of the Components like controller,service,dao-->
<context:component-scan base-package="com"/>
<annotation-driven/>
<!-- view resolver -->
<beans:bean
class="org.springframework.web.servlet.view.InternalResourceViewResolver">
<beans:property name="prefix" value="/WEB-INF/jsp/" />
<beans:property name="suffix" value=".jsp/" />
</beans:bean>
</beans:beans>